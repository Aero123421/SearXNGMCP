# MCP Gateway
API_KEYS=change-me-strong-random
HOST=0.0.0.0
PORT=8787
MCP_PATH=/mcp
LOG_LEVEL=info

# Tool naming (avoid collisions with other MCPs/tools)
# TOOL_PREFIX=sxng -> tools become sxng_web_search / sxng_web_fetch / ...
TOOL_PREFIX=sxng
# If true, also exposes legacy names (web_search/web_fetch/...) in addition to prefixed ones
ENABLE_LEGACY_TOOL_NAMES=false

# SearXNG
SEARXNG_BASE_URL=http://searxng:8080
SEARXNG_SECRET=change-me-strong-random
SEARXNG_VALKEY_URL=valkey://valkey:6379/0

# Rate limits (per token)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=2000

# Fetching
FETCH_TIMEOUT_MS=12000
FETCH_MAX_BYTES=2000000
FETCH_MAX_CHARS=12000

# Rendered fetch (agent-browser)
ENABLE_RENDERED_FETCH=false
AGENT_BROWSER_BIN=agent-browser
RENDER_TIMEOUT_MS=20000
MCP_DOCKERFILE=Dockerfile

# Cloudflare Tunnel (optional; used by docker compose)
CLOUDFLARE_TUNNEL_TOKEN=
